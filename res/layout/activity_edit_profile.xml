<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".EditProfile" >

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/Consumer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:background="@drawable/apptheme_btn_toggle_holo_light"
            android:button="@null"
            android:checked="true"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="Consumer" />

        <RadioButton
            android:id="@+id/Service_Provider"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:background="@drawable/apptheme_btn_toggle_holo_light"
            android:button="@null"
            android:checked="false"
               android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="Consumer" />
    </RadioGroup>

    <EditText
        android:id="@+id/Name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radiogroup"
        android:hint="Your Name"
        android:paddingTop="@dimen/activity_vertical_margin" />

    <EditText
        android:id="@+id/ShopName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Name"
        android:hint="Shop Name" />

    <EditText
        android:id="@+id/PhoneNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ShopName"
        android:hint="@string/phone_number" />

    <EditText
        android:id="@+id/City"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/PhoneNumber"
        android:hint="@string/city" />

    <EditText
        android:id="@+id/Area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/City"
        android:hint="@string/area" />

    <EditText
        android:id="@+id/ServiceType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Area"
        android:hint="@string/service_type" />

    <EditText
        android:id="@+id/ServiceArea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ServiceType"
        android:hint="@string/service_area" />

    <RelativeLayout
        android:id="@+id/btnLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="3dp"
            android:text="@string/save" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnSave"
            android:paddingLeft="3dp"
            android:text="@string/cancel" />
    </RelativeLayout>

</RelativeLayout>